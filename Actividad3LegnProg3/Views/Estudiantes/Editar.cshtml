@model EstudianteViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


@{
    ViewData["Title"] = "Editar Estudiante";
}

<h2>Editar Estudiante</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" name="id" value="@ViewBag.Id" />

    <div class="form-group">
        <label asp-for="Nombrecompleto"></label>
        <input asp-for="Nombrecompleto" class="form-control" />
        <span asp-validation-for="Nombrecompleto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Matricula"></label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Carrera"></label>
        <select asp-for="Carrera" class="form-control">
            @foreach (var carrera in ViewBag.Carrera as List<string>)
            {
                <option value="@carrera" selected="@(Model.Carrera == carrera)">
                    @carrera
                </option>
            }
        </select>
        <span asp-validation-for="Carrera" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CorreoInstitucional"></label>
        <input asp-for="CorreoInstitucional" class="form-control" />
        <span asp-validation-for="CorreoInstitucional" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fechadenacimiento"></label>
        <input asp-for="Fechadenacimiento" type="date" class="form-control" />
        <span asp-validation-for="Fechadenacimiento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genero"></label>
        <input asp-for="Genero" class="form-control" />
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Turno"></label>
        <select asp-for="Turno" class="form-control">
            <option value="">Seleccione</option>
            <option selected="@(Model.Turno == "Matutino")">Matutino</option>
            <option selected="@(Model.Turno == "Vespertino")">Vespertino</option>
        </select>
        <span asp-validation-for="Turno" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipodeingreso"></label>
        <input asp-for="Tipodeingreso" class="form-control" />
    </div>

    <div class="form-check">
        <input asp-for="Estabecado" class="form-check-input" type="checkbox" />
        <label asp-for="Estabecado" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label asp-for="Porcentajedebeca"></label>
        <input asp-for="Porcentajedebeca" class="form-control" type="number" min="0" max="100" />
        <span asp-validation-for="Porcentajedebeca" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="Terminosycondiciones" class="form-check-input" type="checkbox" />
        <label asp-for="Terminosycondiciones" class="form-check-label">Acepto los términos y condiciones</label>
        <span asp-validation-for="Terminosycondiciones" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="/Estudiantes/Lista" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
