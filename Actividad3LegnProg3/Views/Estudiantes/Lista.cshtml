@model List<EstudianteViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
<h4>Listado de Estudiantes</h4>

<div class="row">
    <div>
        <table class="table table-striped table-bordered table-hover">>
            <thead>
                <tr>
                    <th>NombreCompleto</th>
                    <th>Matricula</th>
                    <th>Carrera</th>
                    <th>Correoinstitucional</th>
                    <th>Telefono</th>
                    <th>Fechadenacimiento</th>
                    <th>Genero</th>
                    <th>Turno</th>
                    <th>Tipodeingreso</th>
                    <th>Estasbecado</th>
                    <th>Porcentajedebeca</th>
                    <th>Terminoycondiciones</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 0;
                }
                @foreach (var it in Model)
                {
                    <tr>
                        <td>@it.Nombrecompleto</td>
                        <td>@it.Matricula</td>
                        <td>@it.Carrera</td>
                        <td>@it.CorreoInstitucional</td>
                        <td>@it.Telefono</td>
                        <td>@it.Fechadenacimiento.ToShortDateString()</td>
                        <td>@it.Genero</td>
                        <td>@it.Turno</td>
                        <td>@it.Tipodeingreso</td>
                        <td>@(it.Estabecado ? "Sí" : "No")</td>
                        <td>@it.Porcentajedebeca%</td>
                        <td>@(it.Terminosycondiciones ? "Aceptado" : "No aceptado")</td>
                        <td>
                            <a href="/Estudiantes/Editar/@index" class="btn btn-warning">Editar</a>
                            <a href="/Estudiantes/Eliminar/@index" class="btn btn-danger" onclick="return confirm('¿Seguro que quieres eliminar este estudiante?');">Eliminar</a>
                        </td>
                    </tr>
                    index++;
                }

                    }
                }
            </tbody>
        </table>
    </div>

</div>