@model Actividad4LegnProg3.Models.CalificacionesViewModel

@{
    ViewData["Title"] = "Eliminar Calificación";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro que deseas eliminar esta calificación?</h3>
<div>
    <h4>Calificación</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Estudiante</dt>
        <dd class="col-sm-10">@Model.Estudiante?.Nombrecompleto</dd>

        <dt class="col-sm-2">Materia</dt>
        <dd class="col-sm-10">@Model.Materia?.Nombre</dd>

        <dt class="col-sm-2">Nota</dt>
        <dd class="col-sm-10">@Model.Nota</dd>

        <dt class="col-sm-2">Período</dt>
        <dd class="col-sm-10">@Model.Periodo</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
